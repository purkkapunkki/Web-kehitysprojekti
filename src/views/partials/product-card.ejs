<div class="menu-item">
  <img
    src="/img/<%= product.image %>"
    alt='Tuotteen "<%= product.name %>" kuva'
    class="round-image"
  />
  <h3 id="product-name-text"><%= product.name %></h3>
  <p><%= product.description %></p>
  <p id="allergen-text">
    <% if (product.allergens.length) { %> (<%= product.allergens.join(", ") %>)
    <% } %>
  </p>
  <p class="price"><%= product.price %> €</p>
  <button
    class="buttons add-to-shopping-cart"
    data-product-id="<%= product.product_id %>"
    data-price="<%= product.price %>"
  >
    Lisää ostoskoriin
  </button>
</div>
