<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="keywords" content="Restaurant, Japanese restaurant" />
    <meta name="description" content="Japanese restaurant" />
    <title>User-profile</title>
    <link rel="stylesheet" href="/css/style.css" />
    <link rel="stylesheet" href="/css/media-queries.css" />
    <script
      src="https://kit.fontawesome.com/690006849c.js"
      crossorigin="anonymous"
    ></script>
    <link rel="stylesheet" href="https://unpkg.com/leaflet/dist/leaflet.css" />
    <script src="https://unpkg.com/leaflet/dist/leaflet.js"></script>
  </head>
  <body>
    <%- include('partials/navigation-bar.ejs') %>

    <main>
      <section class="containers grid-container">
        <h1>Käyttäjän profiili</h1>
        <div class="containers grid-column-1">
          <h2>Omat tiedot</h2>
          <hr />
          <p>Nimi: <%= user.firstName %> <%= user.lastName %></p>
          <p>Sähköposti: <%= user.email %></p>
          <br />
          <h2>Muokkaa henkilötietoja</h2>
          <button class="buttons">
            <i class="fa-solid fa-pencil" title="Muokkaa henkilötietoja"></i>
          </button>
        </div>

        <div class="containers grid-column-2">
          <h2>Tilaukseni</h2>
          <hr />
          <% for (order of orders) { %>
          <p>
            <span>Tilaus <%= order.restaurant_order_id %></span>:
            <span
              class="order-status-text"
              data-raw-status="<%= order.restaurant_order_status %>"
            ></span>
          </p>
          <% } %>
        </div>
      </section>
    </main>

    <%- include('partials/footer.ejs') %>

    <script src="/js/order-status-displaying.js"></script>
  </body>
</html>
